<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginBottom="30sp"
            android:text="welcome! \nPlease Sign up here !"
            android:textColor="@color/colorApp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="30sp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginTop="20sp"
        android:layout_marginRight="13sp"
        android:layout_marginLeft="13sp"
        android:padding="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/colorApp"
            android:textSize="16sp"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="5sp"/>
        <EditText
            android:id="@+id/emailSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:drawableEnd="@drawable/ic_email"
            android:drawableTint="@color/colorApp"
            android:hint="exemple@gmail.com"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:textStyle="bold"
            android:textColor="@color/colorApp"
            android:textSize="16sp"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="5sp"/>
        <EditText
            android:id="@+id/passwordSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:drawableEnd="@drawable/ic_password"
            android:drawableTint="@color/colorApp"
            android:hint="********"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remember me!"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/colorApp"/>

        <TextView
            android:id="@+id/goToForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password!"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorApp"
            android:layout_gravity="end"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorApp"
            android:text="Sign in"
            app:cornerRadius="30sp"
            android:layout_margin="10sp"
            />
        <TextView
            android:id="@+id/goToSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User! Sign in here !"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorApp"
            android:layout_marginTop="5sp"/>
    </LinearLayout>



    </LinearLayout>

</ScrollView>